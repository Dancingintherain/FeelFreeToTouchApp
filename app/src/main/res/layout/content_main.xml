<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="de.htw_berlin.katharinapapke.feelfreetotouchapp.MainActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginTop="?attr/actionBarSize"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/art_object_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/mainpicture"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/makeToastButton"
        android:layout_width="126dp"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        android:text="Button1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/flipPictureButton"
        android:layout_marginStart="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toRightOf="@+id/flipPictureButton" />

    <Button
        android:id="@+id/flipPictureButton"
        android:layout_width="144dp"
        android:layout_height="89dp"
        android:background="@android:color/transparent"
        android:text="Button2"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="126dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/art_object_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addElementsInPictureButton"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:text="Button3"
        android:background="@android:color/transparent"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="56dp"
        app:layout_constraintRight_toLeftOf="@+id/flipToNextPage"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="@+id/art_object_picture" />

    <ImageButton
        android:id="@+id/flipToNextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginEnd="54dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="76dp"
        android:layout_marginRight="50dp" />

</android.support.constraint.ConstraintLayout>

