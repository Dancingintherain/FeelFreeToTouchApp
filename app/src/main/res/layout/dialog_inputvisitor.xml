<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/bubbly"
        android:layout_width="0dp"
        android:layout_height="320dp"
        app:srcCompat="@drawable/bubbly"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/inputVisitorText"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:ems="10"
        android:hint="@string/tellArtistText"
        android:inputType="textMultiLine"
        android:textSize="16dip"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/inputVisitorExhibition"
        android:layout_marginTop="36dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/inputVisitorExhibition"
        app:layout_constraintTop_toTopOf="@+id/bubbly" />

    <EditText
        android:id="@+id/inputVisitorExhibition"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/visitorInputExhibition"
        android:inputType="text|textMultiLine"
        android:textSize="16dip"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/dismissInputVisitorDialogButton"
        app:layout_constraintTop_toBottomOf="@+id/inputVisitorText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/addVisitorInputToListButton"
        android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/addVisitorInputToListButton"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:text="Save your comment"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="31dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/inputVisitorExhibition"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/dismissInputVisitorDialogButton"
        android:layout_width="38dp"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        app:srcCompat="@android:drawable/btn_dialog"
        android:background="@color/colorAccent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/addVisitorInputToListButton"
        android:layout_marginEnd="13dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/inputVisitorExhibition"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/addVisitorInputToListButton"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>