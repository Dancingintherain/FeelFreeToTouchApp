<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="de.htw_berlin.katharinapapke.feelfreetotouchapp.activities.ArtistListActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/list_floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listArtistMainSubline"
            android:layout_width="match_parent"
            android:paddingTop="32dp"
            android:layout_height="65dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="@string/artist_list_headline"/>

        <include
            layout="@layout/content_artist_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
